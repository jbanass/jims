<div class="container">
    <h2>Vendor Details</h2>
    <form {{action "save" on="submit"}}>
        <div class="form-group row">
            <label for="inputVendorName"
                class="col-sm-2 col-form-label {{if this.vendor.errors.name "text-danger"}}">Name</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" id="inputVendorName" value=this.vendor.name class=(if this.vendor.errors.name "form-control is-invalid" "form-control")
                placeholder="Name"}}
            </div>
            {{#if this.vendor.errors.name}}
                <div class="col-sm-10">
                    {{#each this.vendor.errors.name as |error|}}
                        <small id="nameHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputVendorCompany"
                class="col-sm-2 col-form-label {{if this.vendor.errors.company "text-danger"}}">Company</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                <select class="form-control" onchange={{action "selectCompany" value="target.value"}}>
                    {{#each this.companies as |company|}}
                        <option selected={{is-equal this.vendor.company.id company.id}} value={{company.id}}>
                            {{company.name}}
                        </option>
                    {{/each}}
                </select>
            </div>
            {{#if this.vendor.errors.company}}
                <div class="col-sm-10">
                    {{#each this.vendor.errors.company as |error|}}
                        <small id="companyHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputVendorUrl"
                class="col-sm-2 col-form-label {{if this.vendor.errors.url "text-danger"}}">URL</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" value=this.vendor.url class=(if this.vendor.errors.url "form-control is-invalid" "form-control") id="inputVendorUrl"
                    placeholder="URL"}}
            </div>
            {{#if this.vendor.errors.url}}
                <div class="col-sm-10">
                    {{#each this.vendor.errors.url as |error|}}
                        <small id="urlHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputVendorCreated" class="col-sm-2 col-form-label">Created</label>
            <div class="col-sm-10">
                {{input readonly disabled=true type="text" value=this.vendor.created class="form-control-plaintext"
                    id="inputVendorCreated" placeholder="Created"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputVendorModified" class="col-sm-2 col-form-label">Modified</label>
            <div class="col-sm-10">
                {{input readonly disabled=true type="text" value=this.vendor.modified class="form-control-plaintext"
                    id="inputVendorModified" placeholder="Modified"}}
            </div>
        </div>
        <button {{action "back"}} class="btn btn-secondary">Back</button>
        {{#if this.vendor.isEditing}}
            <button class="btn btn-dark" {{action "cancel"}}>Cancel</button>
            <button type="submit" {{action "save"}} disabled={{unless this.vendor.isValid true false}}
                class="btn btn-primary">Save</button>
            <button class="btn btn-danger" {{action "delete"}}>Delete</button>
        {{else}}
            <button class="btn btn-danger" {{action "delete"}}>Delete</button>
        {{/if}}
    </form>
</div>