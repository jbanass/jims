<div class="container">
    <h2>Create new Company</h2>
    <div class="panel panel-danger">
        {{#each model.errors.name as |error|}}
            {{error.message}}
        {{/each}}
    </div>
    <form {{action "saveCompany" this.model on="submit"}}>
        <div class="form-group row">
            <label for="inputCompanyName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                {{input type="text" id="inputCompanyName" value=this.model.name class="form-control" placeholder="Name"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputCompanyStreet" class="col-sm-2 col-form-label">Street</label>
            <div class="col-sm-10">
                {{input type="text" value=this.model.street class="form-control" id="inputCompanyStreet" placeholder="Street"}}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCompanyCity">City</label>
                {{input type="text" value=this.model.city class="form-control" id="inputCompanyCity"
                    placeholder="City"}}
            </div>
            <div class="form-group col-md-4">
                <label for="inputCompanyState">State</label>
                {{input type="text" value=this.model.state class="form-control" id="inputCompanyState"
                    placeholder="State"}}
            </div>
            <div class="form-group col-md-2">
                <label for="inputCompanyPostal">Postal</label>
                {{input type="text" value=this.model.postal class="form-control" id="inputCompanyPostal"
                    placeholder="Postal"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputCompanySite" class="col-sm-2 col-form-label">Site</label>
            <div class="col-sm-10">
                {{input type="text" value=this.model.site class="form-control" id="inputCompanySite"
                    placeholder="Site"}}
            </div>
        </div>
        {{#link-to "companies" class="btn btn-secondary"}}Back{{/link-to}}
        <button class="btn btn-dark" {{action "cancel" this.model}}>Cancel</button>
        <button type="submit" {{action "saveCompany" this.model}} class="btn btn-primary">Save</button>
    </form>
</div>