<div class="container">
    <h2>Inventory Type Details</h2>
    <form {{action "save" on="submit"}}>
        <div class="form-group row">
            <label for="inputInventoryTypeName"
                class="col-sm-2 col-form-label {{if this.inventory_type.errors.name "text-danger"}}">Name</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" id="inputInventoryTypeName" value=this.inventory_type.name class=(if this.inventory_type.errors.name "form-control is-invalid" "form-control")
                placeholder="Name"}}
            </div>
            {{#if this.inventory_type.errors.name}}
                <div class="col-sm-10">
                    {{#each this.inventory_type.errors.name as |error|}}
                        <small id="nameHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryTypeDescription"
                class="col-sm-2 col-form-label {{if this.inventory_type.errors.description "text-danger"}}">Description</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" id="inputInventoryTypeDescription" value=this.inventory_type.description class=(if this.inventory_type.errors.description "form-control is-invalid" "form-control")
                placeholder="Description"}}
            </div>
            {{#if this.inventory_type.errors.description}}
                <div class="col-sm-10">
                    {{#each this.inventory_type.errors.description as |error|}}
                        <small id="DescriptionHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryTypeColor"
                class="col-sm-2 col-form-label {{if this.inventory_type.errors.color "text-danger"}}">Color</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" id="inputInventoryTypeColor" value=this.inventory_type.color class=(if this.inventory_type.errors.color "form-control is-invalid" "form-control")
                placeholder="Color"}}
            </div>
            {{#if this.inventory_type.errors.color}}
                <div class="col-sm-10">
                    {{#each this.inventory_type.errors.color as |error|}}
                        <small id="ColorHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryTypeCompany"
                class="col-sm-2 col-form-label {{if this.inventory_type.errors.company "text-danger"}}">Company</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                <select class="form-control" onchange={{action "selectCompany" value="target.value"}}>
                    {{#each this.companies as |company|}}
                        <option selected={{is-equal this.inventory_type.company.id company.id}} value={{company.id}}>
                            {{company.name}}
                        </option>
                    {{/each}}
                </select>
            </div>
            {{#if this.inventory_type.errors.company}}
                <div class="col-sm-10">
                    {{#each this.inventory_type.errors.company as |error|}}
                        <small id="companyHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryTypeCreated" class="col-sm-2 col-form-label">Created</label>
            <div class="col-sm-10">
                {{input readonly disabled=true type="text" value=this.inventory_type.created class="form-control-plaintext"
                    id="inputInventoryTypeCreated" placeholder="Created"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputInventoryTypeModified" class="col-sm-2 col-form-label">Modified</label>
            <div class="col-sm-10">
                {{input readonly disabled=true type="text" value=this.inventory_type.modified class="form-control-plaintext"
                    id="inputInventoryTypeModified" placeholder="Modified"}}
            </div>
        </div>
        <button {{action "back"}} class="btn btn-secondary">Back</button>
        {{#if this.inventory_type.isEditing}}
            <button class="btn btn-dark" {{action "cancel"}}>Cancel</button>
            <button type="submit" {{action "save"}} disabled={{unless this.inventory_type.isValid true false}}
                class="btn btn-primary">Save</button>
            <button class="btn btn-danger" {{action "delete"}}>Delete</button>
        {{else}}
            <button class="btn btn-danger" {{action "delete"}}>Delete</button>
        {{/if}}
    </form>
</div>