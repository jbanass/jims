<div class="container">
    <h2>Inventory Item Details</h2>
    <form {{action "save" on="submit"}}>
        <div class="form-group row">
            <label for="inputInventoryItemSku"
                class="col-sm-2 col-form-label {{if this.inventory_item.errors.sku "text-danger"}}">SKU</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" id="inputInventoryItemSku" value=this.inventory_item.sku class=(if this.inventory_item.errors.sku "form-control is-invalid" "form-control")
                placeholder="SKU"}}
            </div>
            {{#if this.inventory_item.errors.sku}}
                <div class="col-sm-10">
                    {{#each this.inventory_item.errors.sku as |error|}}
                        <small id="nameHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryItemName"
                class="col-sm-2 col-form-label {{if this.inventory_item.errors.name "text-danger"}}">Name</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" id="inputInventoryItemName" value=this.inventory_item.name class=(if this.inventory_item.errors.name "form-control is-invalid" "form-control")
                placeholder="Name"}}
            </div>
            {{#if this.inventory_item.errors.name}}
                <div class="col-sm-10">
                    {{#each this.inventory_item.errors.name as |error|}}
                        <small id="nameHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryItemDescription"
                class="col-sm-2 col-form-label {{if this.inventory_item.errors.description "text-danger"}}">Description</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                {{input type="text" id="inputInventoryItemDescription" value=this.inventory_item.description class=(if this.inventory_item.errors.description "form-control is-invalid" "form-control")
                placeholder="Description"}}
            </div>
            {{#if this.inventory_item.errors.description}}
                <div class="col-sm-10">
                    {{#each this.inventory_item.errors.description as |error|}}
                        <small id="DescriptionHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryItemInventoryType"
                class="col-sm-2 col-form-label {{if this.inventory_item.errors.inventory_type "text-danger"}}">Inventory
                Type</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                <select class="form-control" onchange={{action "selectInventoryType" value="target.value"}}>
                    {{#each this.inventory_types as |inventory_type|}}
                        <option selected={{is-equal this.inventory_item.inventory_type.id inventory_type.id}}
                            value={{inventory_type.id}}>
                            {{inventory_type.name}}
                        </option>
                    {{/each}}
                </select>
            </div>
            {{#if this.inventory_item.errors.inventory_type}}
                <div class="col-sm-10">
                    {{#each this.inventory_item.errors.inventory_type as |error|}}
                        <small id="ColorHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryItemCompany"
                class="col-sm-2 col-form-label {{if this.inventory_item.errors.company "text-danger"}}">Company</label>
            <div class="col-sm-10" onclick={{action "edit"}}>
                <select class="form-control" onchange={{action "selectCompany" value="target.value"}}>
                    {{#each this.companies as |company|}}
                        <option selected={{is-equal this.inventory_item.company.id company.id}} value={{company.id}}>
                            {{company.name}}
                        </option>
                    {{/each}}
                </select>
            </div>
            {{#if this.inventory_item.errors.company}}
                <div class="col-sm-10">
                    {{#each this.inventory_item.errors.company as |error|}}
                        <small id="companyHelp" class="text-danger">
                            {{error.message}}
                        </small>
                    {{/each}}
                </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="inputInventoryItemCreated" class="col-sm-2 col-form-label">Created</label>
            <div class="col-sm-10">
                {{input readonly disabled=true type="text" value=this.inventory_item.created class="form-control-plaintext"
                    id="inputInventoryItemCreated" placeholder="Created"}}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputInventoryItemModified" class="col-sm-2 col-form-label">Modified</label>
            <div class="col-sm-10">
                {{input readonly disabled=true type="text" value=this.inventory_item.modified class="form-control-plaintext"
                    id="inputInventoryItemModified" placeholder="Modified"}}
            </div>
        </div>
        <button {{action "back"}} class="btn btn-secondary">Back</button>
        {{#if this.inventory_item.isEditing}}
            <button class="btn btn-dark" {{action "cancel"}}>Cancel</button>
            <button type="submit" {{action "save"}} disabled={{unless this.inventory_item.isValid true false}}
                class="btn btn-primary">Save</button>
            <button class="btn btn-danger" {{action "delete"}}>Delete</button>
        {{else}}
            <button class="btn btn-danger" {{action "delete"}}>Delete</button>
        {{/if}}
    </form>
</div>